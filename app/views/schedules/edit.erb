<h1>Welcome to Gymnastics Workout Tracker</h1>
<h2><%=@user.username.upcase%>, here are the workouts you should have completed. <br> Please enter the sets and reps for each exercise below.</h2>

<form action="/schedules/<%=@user.schedule.id%>/edit" method="POST">

<% @schedule.workout_dates.each do |x| %>
  <% if x.workout_date < Time.now %>
  <h3>Date: <%=x.workout_date%></h3>
  <table>
    <th>Exercise</th>
    <th>Target Sets</th>
    <th>Target Reps</th>
    <th>Completed Sets</th>
    <th>Completed Reps</th>

    <% x.workout.base_exercises.each do |y| %>
      <tr>
        <td><%=y.long_name%></td>
        <td><%=y.template.sets%></td>
        <td><%=y.template.reps%></td>
            <td><input type="text" name="[<%=x.id%>][<%=y.id%>][:reps]" ></td>
            <td><input type="text" name="[<%=x.id%>][<%=y.id%>][:sets]" ></td>
      </tr>
    <%end%>
  <%end%>
  </table>
<%end%>
<input type="submit" value="Submit">
</form>

<p><a href="/users/logout">Log Out</a></p>
